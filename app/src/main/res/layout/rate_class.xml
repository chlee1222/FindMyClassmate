        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
            android:visibility="invisible" />

            <EditText
                android:id="@+id/workloadEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Comment on course workload."
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Rate class from 1 - 5"
                android:inputType="number" />

            <CheckBox
                android:id="@+id/attendanceCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance Checked"/>

            <CheckBox
                android:id="@+id/lateHomeworkCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Late Homework Allowed"/>

            <EditText
                android:id="@+id/commentsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Other Comments"/>

            <Button
                android:id="@+id/submitReviewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Review"/>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>